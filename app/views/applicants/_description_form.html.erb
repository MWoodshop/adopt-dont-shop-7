<div class="describe">
  <%= form_with(model: @applicant, url: applicant_path(@applicant), local: true, method: :patch, id: 'describe-pet-form') do |f| %>
    <div>
      <%= f.label :add_description %>
    </div>
    <div>
      <%= f.text_area :description %>
    </div>
    <div>
      <%= f.submit "Submit this application" %>
    </div>
  <% end %>
</div>
